public class UpperCase {
    public static void main(String[] args) {
        String str = "java programming";
        String result = "";

        for (int i = 0; i < str.length(); i++) {
            char ch = str.charAt(i);

            // check lowercase letter
            if (ch >= 'a' && ch <= 'z') {
                ch = (char) (ch - 32);
            }

            result = result + ch;
        }

        System.out.println("Uppercase: " + result);
    }
}



