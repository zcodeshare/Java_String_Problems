public class CountSubstring {
    public static void main(String[] args) {
        String str = "java is java and java is fun";
        String sub = "java";

        int count = 0;
        int index = 0;

        while ((index = str.indexOf(sub, index)) != -1) {
            count++;
            index = index + sub.length();
        }

        System.out.println("Occurrences: " + count);
    }
}
