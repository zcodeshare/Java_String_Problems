public class CharCountInStr {
    public static void main(String[] args) {

        String str = "my name is deksha chaudhary";
        char ch = 'a';
        int count = 0;

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ch) {
                count++;
            }
        }

        System.out.println(count);
    }
}


public class CharCountInStr {
    public static void main(String[] args) {

        String str = "my name is deksha chaudhary";
        char ch = 'a';

        int totalLength = str.length();
        int lengthAfterRemove = str.replace(String.valueOf(ch), "").length();
        int count = totalLength - lengthAfterRemove;

        System.out.println(count);
    }
}

